<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/GREY">
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hello_and_03"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_marginTop="40sp"
        android:id="@+id/tvand03"
        android:textStyle="bold"
        />

    <TextView

        android:id="@+id/tvandWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:text="Welcome to Layout"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/tvand03"
        android:textSize="30sp"
        android:textStyle="bold" />

    <View
        android:layout_width="113dp"
        android:layout_height="131dp"
        android:layout_below="@id/tvandWelcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:background="@drawable/blue_circle" />
    <TextView
        android:id="@+id/mTV_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Barshed Ali Laskar"
        android:textColor="#FF0000"
        android:textSize="25sp"
        android:layout_centerVertical="true"
        android:drawableEnd="@drawable/ic_name"
        android:drawablePadding="10sp"
        />
    <TextView
        android:id="@+id/mTV_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mTV_name"
        android:text="Age:"
        android:textColor="#FF0000"
        android:textSize="25sp"
        android:layout_centerVertical="true"
        />
    <Button
        android:id="@+id/mBtn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="20sp"
        android:background="@color/GREEN"
        android:text="Next"
    />
    <View
        android:id="@+id/rq_1"
        android:layout_width="141dp"
        android:layout_height="12dp"
        android:layout_above="@+id/mBtn_next"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="29dp"
        android:background="#C4C4C4"
        android:layout_marginEnd="56dp"
        />
    <View
        android:id="@+id/rq_2"
        android:layout_width="166dp"
        android:layout_height="20dp"
        android:layout_above="@+id/rq_1"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="19dp"
        android:background="#C4C4C4"
        android:layout_marginEnd="31dp"
        />
    <View
        android:layout_width="183dp"
        android:layout_height="20dp"
        android:layout_above="@+id/rq_2"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="19dp"
        android:background="#C4C4C4"
        android:layout_marginEnd="14dp"
        />
</RelativeLayout>